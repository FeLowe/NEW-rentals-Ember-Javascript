{{#if addNewCity}}
  <h1>New City</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="cityname"> City Name</label>
          {{input value=cityname id="cityname"}}
        </div>

        <div class="form-group">
          <label for="country">Country</label>
          {{input value=country id="country"}}
        </div>

        <button {{action 'saveCity'}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'showCityForm'}}>New City</button>
{{/if}}
